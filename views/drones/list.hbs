{{#each drones}}
    <div>
        <p>Name: {{name}}</p>
        <p>Propellers: {{propellers}}</p>
        <p>Max Speed: {{maxSpeed}}</p>
        <a href="/drones/{{_id}}/edit">Edit</a>
        <form action="/drones/{{_id}}/delete" method="POST">
            <button type="submit">Delete</button>
        </form>
    </div>
{{/each}}